@* 재사용 KPI 카드 컴포넌트 *@

<div class="kpi-card">
    <div class="flex items-center justify-between mb-1.5">
        <span class="text-[11px] font-semibold text-text-light uppercase tracking-wide">
            @Label
        </span>
        @if (!string.IsNullOrEmpty(Delta))
        {
            <span class="text-[10px] font-bold px-1.5 py-0.5 rounded bg-green-50 text-green-700">
                @Delta
            </span>
        }
    </div>
    <div class="text-2xl font-extrabold" style="color: @Color">@Value</div>
    @if (!string.IsNullOrEmpty(SubText))
    {
        <div class="text-[11px] text-text-light mt-0.5">@SubText</div>
    }
</div>

@code {
    [Parameter] public string Label { get; set; } = "";
    [Parameter] public string Value { get; set; } = "";
    [Parameter] public string? Delta { get; set; }
    [Parameter] public string? SubText { get; set; }
    [Parameter] public string Color { get; set; } = "#1A1D21";
}
